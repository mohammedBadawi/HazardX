<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Address"
    android:background="@mipmap/background">

    <EditText
        android:id="@+id/et_add_address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20sp"
        android:background="@drawable/button_curved"
        android:hint="Address"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        android:backgroundTint="@color/colorAccent">

    </EditText>

    <EditText
        android:id="@+id/et_location_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20sp"
        android:background="@drawable/button_curved"
        android:backgroundTint="@color/colorAccent"
        android:hint="Location Name"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_add_address"
        app:layout_constraintVertical_bias="0.11">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20sp"
        android:background="@drawable/button_curved"
        android:text="Add Location"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_location_name"
        app:layout_constraintVertical_bias="0.268"
        android:id="@+id/btn_add_new">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>